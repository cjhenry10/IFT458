extends baseTemplate 

block content
  main.main
    .card-container
      .card
        .card__header
          h1.heading-tertirary
            span Sign In
        .card__details
          h4.card__sub-heading New Customer
          p.card__text.
            
            Please enter the following Details
            
          .card__data
            svg.card__icon
              use(href='img/icons.svg#icon-map-pin')
            form(action='/signup' method='POST')
              label(for='fullName') Full name:
              input#fname(type='text', name='fullName')
              br
              br
              label(for='email') Email:
              input#email(type='email', name='email')
              br
              br
              label(for='password') Password:
              input#password(type='password', name='password')
              br
              br
              label(for='passwordConfirm') Confirm Password:
              input#cpassword(type='password', name='passwordConfirm')
              br
              br
              input.card__sub-heading(type='submit', value='Submit')

